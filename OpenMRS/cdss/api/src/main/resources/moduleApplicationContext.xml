    <!-- Adds CDSSService to OpenMRS context so it can be accessed
    calling Context.getService(CDSSService.class) -->
    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.cdss.api.RuleEngineService</value>
                <ref bean="cdss.RuleEngineServiceImpl"/>
            </list>
        </property>
    </bean>


    <bean parent="serviceContext">
        <property name="moduleService">
            <list>
                <value>org.openmrs.module.cdss.api.RuleManagerService</value>
                <ref bean="cdss.RuleManagerServiceImpl"/>
            </list>
